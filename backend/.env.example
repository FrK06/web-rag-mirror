# API Gateway Configuration
PORT=8000

# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/ragassistant?retryWrites=true&w=majority
MONGO_DB=ragassistant

# Redis Configuration
REDIS_URL=redis://username:password@redis-host:port/0

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_here
CSRF_SECRET=your_strong_csrf_secret_here
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_VERIFICATION_REQUIRED=true

# Frontend Configuration
FRONTEND_URL=https://your-app.up.railway.app
NEXT_PUBLIC_API_URL=https://your-api-gateway.up.railway.app

# Service URLs (for API Gateway)
CONVERSATION_SERVICE_URL=https://your-conversation-service.up.railway.app
SEARCH_SERVICE_URL=https://your-search-service.up.railway.app
MULTIMEDIA_SERVICE_URL=https://your-multimedia-service.up.railway.app
NOTIFICATION_SERVICE_URL=https://your-notification-service.up.railway.app
LLM_SERVICE_URL=https://your-llm-service.up.railway.app
AUTH_SERVICE_URL=https://your-auth-service.up.railway.app

# OpenAI API Key (for multimedia and LLM services)
OPENAI_API_KEY=your_openai_api_key

# Google API Key (for search service)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CSE_ID=your_google_cse_id

# Twilio Configuration (for notification service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number